(version 0.8.5)

(build
 (all_platforms
  ((action
    (progn
     (when %{pkg-self:dev} (run dune subst))
     (run dune build -p %{pkg-self:name} -j %{jobs} @install))))))

(depends
 (all_platforms
  (dune ocaml)))

(source
 (fetch
  (url https://github.com/gridbugs/climate/archive/refs/tags/0.8.5.tar.gz)
  (checksum
   sha256=df1cd8cedcbe518c77e5160503c4159e16d92dbcb3dd0cfcaeeaf0686af0c323)))
